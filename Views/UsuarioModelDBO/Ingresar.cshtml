@model SubastaWeb.Models.Usuario.UsuarioModelDBO

@{
    ViewData["Title"] = "Ingresar";
}

<h1>Ingresar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Ingresar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoUsuario" class="control-label"></label>
                <select asp-for="TipoUsuario" class="form-control" id="TipoUsuario">
                    <option value="">Seleccione una categoría</option>
                    <option value="espectador">Espectador</option>
                    <option value="comprador">Comprador</option>
                </select>
                <span asp-validation-for="TipoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
