@model SubastaWeb.Models.Producto.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <h1 class="text-center">@Model.Titulo</h1>

    <div class="row">
        <div class="col-md-6 text-center">
            <img src="@Model.ImgUrl" alt="@Model.Titulo" class="img-fluid" style="max-width: 300px; height: auto;" />
        </div>
        <div class="col-md-6">
            <h3 class="text-success">Información del Producto</h3>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Categoria)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.TipoDeSubasta)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TipoDeSubasta)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PrecioInicial)
                </dt>
                <dd class="col-sm-8 text-primary">
                    @Html.DisplayFor(model => model.PrecioInicial)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PrecioFinal)
                </dt>
                <dd class="col-sm-8 text-danger">
                    @Html.DisplayFor(model => model.PrecioFinal, "C")
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FechaCaducidad)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaCaducidad)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EnLiquidacion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.EnLiquidacion)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-success">Volver a la lista</a>
        <a asp-action="Edit" asp-route-id="@Model?.IdProducto" class="btn btn-success">Editar</a>        
    </div>
</div>
